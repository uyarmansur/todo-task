generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Todo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String @unique
  description String?
  status      String @default("pending")
  createdAt   DateTime @default(now())
}
